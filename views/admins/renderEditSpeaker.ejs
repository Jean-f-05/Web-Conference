          <div id="SpeakersHeader" class="col-10 my-3">
          <form action="/admins/speakers/<%=speaker.id%>?_method=PUT" method="POST"  class="validated-form" novalidate enctype="multipart/form-data">
            <div class="container text-left">
              <h1>Speakers</h1>
              <h4 class="text-muted">Edit speakers</h4>
              <hr>
            </div>
            <div class="container">
              <div class="row">
                <div class="mb-3 col-6 col-xs-12">
                  <label for="exampleFormControlInput1" class="form-label">Name</label>
                  <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Speaker's name"  name="name" value="<%=speaker.name%>" required>
                </div>
                <div class="mb-3 col-6 col-xs-12">
                  <label for="exampleFormControlInput1" class="form-label">Job</label>
                  <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Speaker's Job" name="job" value="<%=speaker.job%>"required>
                </div>
              </div>
              <div class="row">
                <div class="mb-3 col-sm-4 col-xs-12">
                  <label for="exampleFormControlInput1" class="form-label">Twitter</label>
                  <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Twitter" name="socialNetworks[twitter]" value="<%=speaker.socialNetworks[0].twitter%>">
                </div>
                <div class="mb-3 col-sm-4 col-xs-12">
                  <label for="exampleFormControlInput1" class="form-label">Facebook</label>
                  <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Facebook" name="socialNetworks[facebook]" value="<%=speaker.socialNetworks[0].facebook%>">
                </div>
                <div class="mb-3 col-sm-4 col-xs-12">
                  <label for="exampleFormControlInput1" class="form-label">Linkedin</label>
                  <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Linkedin" name="socialNetworks[linkedin]" value="<%=speaker.socialNetworks[0].linkedin%>">
                </div>
              </div>
              <div class="b-3 col-sm-6 col-xs-12">
                <label for="formFile" class="form-label">Photo</label>
                <input class="form-control" type="file" id="formFile" name="photo">
              </div>
              <div class="b-3 col-sm-6 col-xs-12">
                <label for="exampleFormControlTextarea1" class="form-label">Description</label>
                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Speaker's Description" name="details" required><%=speaker.details%></textarea>
              </div>
              <div class="row">
              <div class="container col-12 text-left">
                <button type="submit" class="btn btn-primary">Edit Speaker</button>
               
              </div>
              </div>
            </div>
          </form>