<% layout("/layouts/boilerplate") -%>
<main>
<header class="headerStyle py-5 col-xs-12">
    <div class=" container">
        <div class="intro-text">
            <div class="intro-lead-in">Welcome to The</div>
           
            <div class="intro-heading text-uppercase">WebConference</div>    
        </div>
    </div>
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
  Register Now
</button>
</header>

<div class="container-fluid">
  <form action="/webconference" method="POST" novalidate class="validated-form">
    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title mx-auto" id="staticBackdropLabel">WebConference Registration</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <div class="row mx-auto mb-3">
                <input type="text" class="form-control" placeholder="Your Name" aria-label="Name" aria-describedby="basic-addon1" name="name" id="name" required>
            </div>
            <div class="row mx-auto mb-3">              
                <input type="email" class="form-control" placeholder="Your Email" aria-label="Email" aria-describedby="basic-addon2" name="email" id="email" required>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" type="button" class="btn btn-primary">Register</button>
          </div>
        </div>
      </div>
    </div>
    </form>
  </div>



