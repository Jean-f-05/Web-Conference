<section id="Speaker">
  <div class="container">
    <div class="row py-4">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">Speakers</h2>
        <h3 class="section-subheading text-muted">
          Lorem ipsum dolor sit, amet consectetur adipisicing elit.
        </h3>
        <div class="row" id="renderSpeakers">
          <%for (let speaker of speakers){%>
            <div class="col-sm-6 col-xl-3 mb-5 m-auto">
              <div class="team-member" data-bs-toggle="modal" data-bs-target="#exampleModal_<%=speaker._id%>">
                <img  class="mx-auto img-fluid mb-3 viewSpeaker" id=" <%= speaker._id %> "  src="<%= speaker.photo.thumb%>" alt="">
                <h4><%=speaker.name%></h4>
                <p class="text-muted"> <%= speaker.job%> </p>
             </div>
             <div class="modal fade " id="exampleModal_<%=speaker._id%>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
              <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header ">
                  <h4 class="modal-title ms-auto" id="exampleModalLabel"><%= speaker.name  %> </h4>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <div class="container ">
                    <div class="row mx-auto" style="max-width:50%;"><img id="<%= speaker._id %>" src="<%= speaker.photo.thumbDetails%>" alt=""></div>
                  </div>
                  <strong><%= speaker.name%></strong> 
                  <p><%=speaker.details%></p> 
                </div>
                <div class="modal-footer">
               
                    <div class="col-xs-6 mx-auto">
                      <ul class="list-inline social-buttons">
                        <li class="list-inline-item">
                          <a href="<%= speaker.socialNetworks[0].facebook %>" target="_blank"><i class="fab fa-facebook"></i></a>
                        </li>
                        <li class="list-inline-item">
                          <a href="<%= speaker.socialNetworks[0].linkedin%>" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                        </li>
                        <li class="list-inline-item">
                          <a href="<%= speaker.socialNetworks[0].facebook %>" target="_blank"><i class="fab fa-facebook"></i></a>
                        </li>   
                      </ul>
                    </div>  
                </div>
              </div>
              </div>
              </div>
            </div>
          <% } %>  
        </div>
      </div>
    </div>
  </div>
  </section>


