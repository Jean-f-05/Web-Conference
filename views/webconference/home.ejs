<section id="Sponsor">
<div class="container">
  <div class="row py-4">
    <div class="col-lg-12 text-center">
      <h2 class="section-heading text-uppercase">Sponsors</h2>
      <div class="row" id="renderSponsors">
<% for(let sponsor of sponsors) {%>
  <div class="col-sm-6 col-xl-3 mb-5 m-auto">
        <img  class="mx-auto img-fluid viewSpeaker " id=" <%= sponsor._id %> "  src="<%= sponsor.image.thumb%>" alt="">
    
  </div>
<% } %>  
      </div>
    </div>
